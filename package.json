{
  "name": "slidedown",
  "version": "0.3.0",
  "description": "Markdown slide decks",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidedown/slidedown.git"
  },
  "author": "Dan Tao <daniel.tao@gmail.com>",
  "contributors": [
    "leesei <leesei@gmail.com>",
    "CyrusN <cyrusncy@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slidedown/slidedown/issues"
  },
  "homepage": "https://github.com/slidedown/slidedown",
  "scripts": {
    "build": "npm run build-js && npm run build-css",
    "build-js": "NODE_ENV=production browserify ./src/slidedown.js | uglifyjs -cm > ./dist/slidedown.build.min.js",
    "watch-js": "watchify ./src/slidedown.js -o ./dist/slidedown.build.js -dv",
    "build-css": "node-sass --include-path style style/slidedown.scss ./dist/slidedown.build.min.css --output-style compressed",
    "watch-css": "nodemon -e scss -x 'node-sass --include-path style style/slidedown.scss ./dist/slidedown.build.css'"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "deep-defaults": "^1.0.3",
    "hammerjs": "^2.0.6",
    "highlight.js": "^8.1.0",
    "marked": "^0.3.3"
  },
  "devDependencies": {
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
